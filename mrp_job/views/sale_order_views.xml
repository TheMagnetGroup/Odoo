<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="sale_order_form_inherit_mrp_job" model="ir.ui.view">
	    <field name="name">sale.order.form.inherit.mrp.job</field>
	    <field name="model">sale.order</field>
	    <field name="inherit_id" ref="sale.view_order_form"/>
	    <field name="arch" type="xml">
	    	<xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
	    		<field name="art_ref" required="1"/>
	    		<field name="job_id" invisible="1"/>
	    	</xpath>
	    	<xpath expr="//field[@name='order_line']//form//field[@name='name']" position="after">
	    		<field name="art_ref" required="1"/>
	    	</xpath>
	    	<xpath expr="//field[@name='order_line']//tree//field[last()]" position="after">
    			<button name="%(mrp_job.duplicate_sale_order_line_action)d" type="action" icon="fa-clone"/>
	    	</xpath>
	    	<xpath expr="//div[hasclass('oe_button_box')]" position="inside">
	    		<button name="action_view_jobs" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('jobs_count', '=', 0)]}">
                    <field name="jobs_count" widget="statinfo" string="Jobs"/>
                </button>
	    	</xpath>
	    </field>
	</record>
</odoo>
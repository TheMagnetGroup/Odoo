<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="mrp_job_view_form" model="ir.ui.view">
		<field name="name">mrp.job.view.form</field>
		<field name="model">mrp.job</field>
		<field name="arch" type="xml">
			<form string="Mrp Job">
				<header>
					<field name="status" widget="statusbar"/>
				</header>
				<sheet>
					<div class="oe_button_box" name="button_box">
                        <button name="go_to_mrp_job_pickings" type="object" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('picking_count', '&lt;=', 0)]}">
                            <field name="picking_count" string="Pickings" widget="statinfo"/>
                        </button>
                    </div>
					<group>
						<group>
							<field name="sale_order_id"/>
							<field name="product_tmpl_id"/>
						</group>
						<group>
							<field name="art_ref"/>
							<field name="qty"/>
						</group>
					</group>
					<notebook>
						<page name="so_note" string="Notes">
							<field name="so_notes"/>
						</page>
						<page name="mfg_order" string="Manufacturing Orders">
							<field name="mfg_order_ids">
								<tree>
									<field name="name"/>
									<field name="product_id"/>
								</tree>
							</field>
						</page>
						<page name="mfg_workorders" string="Workorders">
							<field name="workorder_ids"/>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>
	<record id="mrp_job_view_tree" model="ir.ui.view">
		<field name="name">mrp.job.view.tree</field>
		<field name="model">mrp.job</field>
		<field name="arch" type="xml">
			<tree string="Mrp Jobs">
				<field name="name"/>
				<field name="art_ref"/>
				<field name="sale_order_id" string="Sale Order"/>
				<field name="product_tmpl_id" string="Product"/>
				<field name="qty"/>
				<field name="status"/>
			</tree>
		</field>
	</record>
	<record id="action_open_all_jobs" model="ir.actions.act_window">
		<field name="name">MRP Jobs</field>
		<field name="res_model">mrp.job</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{}</field>
		<field name="domain">[]</field>
	</record>
	<menuitem id="menu_mrp_jobs_root" parent="mrp.menu_mrp_manufacturing" action="action_open_all_jobs" name="MRP Jobs" sequence="20"/>
</odoo>
<odoo>
    <data>
        <record id="tmg_attachment_types" model="ir.ui.view">
            <field name="name">tmg.attachment.types</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="Attachments" string="Attachments">
                        <field name="attachments" attrs="{}">
                            <tree class="o_documents_list_view" create="false" edit="false">
                                <field name="type" invisible="1"/>
                                <field name="thumbnail" options="{'size':[90,90]}" widget="image"/>
                                <field name="datas" widget="binary" filename="datas_fname"
                                       attrs="{'invisible':[('type','=','url')]}"/>
                                <field name="datas_fname" invisible="1" attrs="{'invisible':[('type','=','url')]}"
                                       class="oe_inline oe_right"/>
                                <field name="url" widget="binary" filename="datas_fname"
                                       attrs="{'invisible':[('type','=','binary')]}"/>
                                <field name="write_uid"/>
                                <field name="create_date"/>
                                <field name="attachment_category" string="Category">
                                    <field name="attachments" widget="many2many_tags"/>
                                </field>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>



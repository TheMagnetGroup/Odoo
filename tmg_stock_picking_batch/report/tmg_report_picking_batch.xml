<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="tmg_stock_picking_batch.report_picking_batch" inherit_id="stock_picking_batch.report_picking_batch">

            <xpath expr="/t[1]/t[1]/t[1]/t[6]/div[1]/h3[1]" position="replace"/>
            <xpath expr="/t[1]/t[1]/t[1]/t[6]/div[1]/table[1]" position="replace"/>
            <xpath expr="/t[1]/t[1]/t[1]/t[6]/div[1]/div[1]" position="replace"/>
            <xpath expr="/t[1]/t[1]/t[1]/t[6]/div[1]/p[1]" position="replace"/>

            <xpath expr="/t[1]/t[1]/t[1]/t[6]/div[1]/t[1]/table[1]/thead[1]/tr[1]/th[3]" position="replace">
                <th width="20%">Destination</th>
            </xpath>

            <xpath expr="/t[1]/t[1]/t[1]/t[6]/div[1]/t[1]/table[1]/thead[1]/tr[1]/th[4]" position="replace">
                <th width="30%">Picking</th>
            </xpath>

            <xpath expr="/t[1]/t[1]/t[1]/t[6]/div[1]/t[1]/table[1]/thead[1]/tr[1]/th[6]" position="replace"/>

            <xpath expr="/t[1]/t[1]/t[1]/t[6]/div[1]/t[1]/table[1]/thead[1]/tr[1]/th[3]" position="after">
                <th>Job</th>
            </xpath>

            <xpath expr="/t[1]/t[1]/t[1]/t[6]/div[1]/t[1]/table[1]/tbody[1]/tr[1]/td[3]" position="after">
                <td>
                    <span t-esc="move_operation.mapped('picking_id').job_id.id"/>
                </td>
            </xpath>
            <xpath expr="/t[1]/t[1]/t[1]/t[6]/div[1]/t[1]/table[1]/tbody[1]/tr[1]/td[5]" position="replace">
                <td>
                    <img class="barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', move_operation.mapped('picking_id').display_name, 600, 100)" style="width:100%;height:50px"  alt="Barcode"/>
                </td>
            </xpath>
            <xpath expr="/t[1]/t[1]/t[1]/t[6]/div[1]/t[1]/table[1]/tbody[1]/tr[1]/td[7]" position="replace"/>
        </template>
    </data>
</odoo>
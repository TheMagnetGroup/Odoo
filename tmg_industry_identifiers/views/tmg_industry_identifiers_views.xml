<odoo>
    <data>
        <record id="tmg_industry_identifiers_view" model="ir.ui.view">
            <field name="name">tmg.industry.identifiers.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="industry_identifiers" string="Industry Identifiers"
                          attrs="{'invisible': [('customer','=',False)]}">
                        <xpath expr="//page[@name='industry_identifiers']" position="inside">
                            <group name="industry_identifiers">
                                <group name="group_left" string="Industry Identifiers">
                                    <field name="asi_number"/>
                                    <field name="sage_number"/>
                                    <field name="ppai_number"/>
                                </group>
                            </group>
                        </xpath>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="tmg_industry_identifiers_search" model="ir.ui.view">
            <field name="name">tmg.industry.identifiers.search</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/field[@name='name']" position="after">
                    <field name="id"/>
                    <field name="name" string = "Industry Identifiers" filter_domain="['|','|',('asi_number', 'ilike', self),
                                                                ('sage_number', 'ilike', self),
                                                                ('ppai_number', 'ilike', self)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
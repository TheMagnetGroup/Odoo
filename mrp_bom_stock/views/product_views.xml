<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="product_template_view_form_inherit_mrp_bom_stock" model="ir.ui.view">
		<field name="name">product.template.form.inherit.mrp_bom_stock</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_only_form_view"/>
		<field name="arch" type="xml">
			<label for="sale_delay" position="before">
				<field name="bom_id" attrs="{'required': [('bom_count', '>', 0)]}"/>
			</label>
            <button name="%(stock.action_stock_level_forecast_report_template)d" position="replace">
                <button type="action" name="%(stock.action_stock_level_forecast_report_template)d" attrs="{'invisible':['|', ('type', '!=', 'product'), ('bom_id', '!=', False)]}" class="oe_stat_button" icon="fa-building-o">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="virtual_available" widget="statinfo" nolabel="1"/>
                            <span attrs="{'invisible':[('outgoing_qty', '=', 0),('incoming_qty','=',0)]}" groups="base.group_no_one">
                                (-<field name="outgoing_qty" widget="statinfo" nolabel="1"/>+<field name="incoming_qty" widget="statinfo" nolabel="1"/>)
                            </span>
                            <field name="uom_name" class="ml4"/>
                        </span>
                        <span class="o_stat_text">Forecasted</span>
                    </div>
                </button>
                <button type="action" name="%(mrp_bom_stock.action_stock_kit_report_pivot)d" attrs="{'invisible':['|', ('type', '!=', 'product'), ('bom_id', '=', False)]}" class="oe_stat_button" icon="fa-building-o">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="virtual_available" widget="statinfo" nolabel="1"/>
                            <span attrs="{'invisible':[('outgoing_qty', '=', 0),('incoming_qty','=',0)]}" groups="base.group_no_one">
                                (-<field name="outgoing_qty" widget="statinfo" nolabel="1"/>+<field name="incoming_qty" widget="statinfo" nolabel="1"/>)
                            </span>
                            <field name="uom_name" class="ml4"/>
                        </span>
                        <span class="o_stat_text">Forecasted</span>
                    </div>
                </button>
            </button>
		</field>
	</record>
    <record id="product_normal_form_inherit_mrp_bom_stock" model="ir.ui.view">
        <field name="name">product.form.inherit.mrp_bom_stock</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <label for="sale_delay" position="before">
                <field name="bom_id" attrs="{'required': [('bom_count', '>', 0)]}"/>
            </label>
            <button name="action_open_quants" position="replace">
                <button class="oe_stat_button"
                    name="action_open_quants"
                    icon="fa-building-o"
                    type="object" attrs="{'invisible':['|', ('type', '!=', 'product'), ('bom_id', '!=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="qty_available" widget="statinfo" nolabel="1" class="mr4"/>
                            <field name="uom_name"/>
                        </span>
                        <span class="o_stat_text">On Hand</span>
                    </div>
                 </button>
                <button class="oe_stat_button" 
                    name="action_open_components_quants"
                    icon="fa-building-o" 
                    type="object" attrs="{'invisible':['|', ('type', '!=', 'product'), ('bom_id', '=', False)]}">
                       <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="qty_available" widget="statinfo" nolabel="1" class="mr4"/>
                                <field name="uom_name"/>
                            </span>
                            <span class="o_stat_text">On Hand</span>
                       </div>
                </button>
            </button>
            <button name="%(stock.action_stock_level_forecast_report_product)d" position="replace">
                <button type="action" name="%(stock.action_stock_level_forecast_report_product)d" attrs="{'invisible':['|', ('type', '!=', 'product'), ('bom_id', '!=', False)]}" class="oe_stat_button" icon="fa-building-o">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="virtual_available" widget="statinfo" nolabel="1"/>
                            <span attrs="{'invisible': [('outgoing_qty', '=', 0), ('incoming_qty', '=', 0)]}" groups="base.group_no_one">
                                (-<field name="outgoing_qty" widget="statinfo" nolabel="1"/>+<field name="incoming_qty" widget="statinfo" nolabel="1"/>)
                            </span>
                            <field name="uom_name" class="ml4"/>
                        </span>
                        <span class="o_stat_text">Forecasted</span>
                    </div>
                </button>
                <button type="object" name="action_open_components_forcasted" attrs="{'invisible':['|', ('type', '!=', 'product'), ('bom_id', '=', False)]}" class="oe_stat_button" icon="fa-building-o">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="virtual_available" widget="statinfo" nolabel="1"/>
                            <span attrs="{'invisible': [('outgoing_qty', '=', 0), ('incoming_qty', '=', 0)]}" groups="base.group_no_one">
                                (-<field name="outgoing_qty" widget="statinfo" nolabel="1"/>+<field name="incoming_qty" widget="statinfo" nolabel="1"/>)
                            </span>
                            <field name="uom_name" class="ml4"/>
                        </span>
                        <span class="o_stat_text">Forecasted</span>
                    </div>
                </button>
            </button>
        </field>
    </record>
</odoo>
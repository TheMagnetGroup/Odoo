<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="report_stock_kit_tree" model="ir.ui.view">
        <field name="name">report.stock.kit.tree</field>
        <field name="model">report.stock.kit</field>
        <field name="arch" type="xml">
            <tree string="Kit Reports">
                <field name="product_tmpl_id"/>
                <field name="qty_available"/>
            </tree>
        </field>
    </record>

    <record id="view_repot_stock_kit_pivot" model="ir.ui.view">
        <field name="name">report.stock.kit.pivot</field>
        <field name="model">report.stock.kit.forcasted</field>
        <field name="arch" type="xml">
            <pivot string="Kit Reports" disable_linking="True">
                <field name="product_tmpl_id" type="row"/>
                <field name="warehouse_id" type="row"/>
                <field name="virtual_available" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_repot_stock_kit_pivot_inventory" model="ir.ui.view">
        <field name="name">report.stock.kit.pivot</field>
        <field name="model">report.stock.kit</field>
        <field name="arch" type="xml">
            <pivot string="Kit Reports" disable_linking="True">
                <field name="product_tmpl_id" type="row"/>
                <field name="qty_available" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_stock_kit_report_template" model="ir.actions.act_window">
        <field name="name">Manufacturable Stock</field>
        <field name="res_model">report.stock.kit</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,pivot</field>
        <field name="domain">[('product_tmpl_id', '=', active_id)]</field>
        <field name="view_id" ref="report_stock_kit_tree"/>
    </record>
    <record id="action_stock_kit_report_pivot" model="ir.actions.act_window">
        <field name="name">Product Manufacturable Forecast</field>
        <field name="res_model">report.stock.kit.forcasted</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,pivot</field>
        <field name="domain">[('product_tmpl_id', '=', active_id)]</field>
        <field name="view_id" ref="view_repot_stock_kit_pivot"/>
    </record>

    <record id="action_stock_kit_product_report_inventory" model="ir.actions.act_window">
        <field name="name">Inventory</field>
        <field name="res_model">report.stock.kit</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="view_repot_stock_kit_pivot_inventory"/>
    </record>

    <menuitem id="menu_kit_inventiry_report" action="action_stock_kit_product_report_inventory" sequence="99" parent="sale.menu_sale_report" groups="sales_team.group_sale_salesman"/>

</odoo>
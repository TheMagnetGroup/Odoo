<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mrp_mrp_production_form_view_inheirt_tmg" model="ir.ui.view">
            <field name="name">mrp_mrp_production_form_view_inheirt_tmg</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/group[1]" position="inside">
                    <group>
                        <field name="sale_line_id" readonly="1"/>
                    </group>
                </xpath>

            </field>
        </record>
        <record id="view_mrp_production_filter_inherit" model="ir.ui.view">
                <field name="name">mrp.production.select.inherit</field>
                <field name="model">mrp.production</field>
                <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
                <field name="arch" type="xml">
                    <xpath expr="//search" position="inside">
                        <field name="sale_line_order_id"/>
                    </xpath>
                </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <data>
      <record id="drop_ship_wizard" model="ir.ui.view">
         <field name="name">drop_ship_wizard</field>
         <field name="model">drop.ship.wizard</field>
         <field name="arch" type="xml">
            <form string="Process Shipments">
               <sheet>
                  <group>
                     <field name="picking_id" invisible="1" />
                     <field name="package_carrier_type" invisible="1" />
                  </group>
                  <group>
                     <field name="delivery_package_ids" mode="tree" nolabel="1">
                        <tree editable="bottom">
                           <field name="shipping_weight" />
                           <field name="packaging_id" domain="[('package_carrier_type', '=', parent.package_carrier_type)]" />
                           <field name="num_packages" />
                        </tree>
                     </field>
                  </group>
               </sheet>
               <footer>
                  <button string="Confirm" type="object" name="action_define_packages" class="oe_highlight" />
                  <button string="Cancel" special="cancel" class="oe_link" />
               </footer>
            </form>
         </field>
      </record>
      <act_window id="drop_ship_action" multi="True" key2="client_action_multi" name="Process Shipments" res_model="portal.quick.assign" src_model="helpdesk.ticket" view_mode="form" target="new" view_type="form" view_id="portal_quick_assign_wizard" />
   </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="wizard_import_addtional_deliveries">
            <field name="name">Import Additonal Deliveries</field>
            <field name="model">sale.order.line.delivery.wizard</field>
            <field name="priority">16</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import Additonal Deliveries" create="true">
                    <sheet>
                        <div class="oe_button_box" name="button_box"></div>
                        <div colspan="2" class="oe_form_box_info">
                            <div class="alert alert-success" role="alert">
                              <h4 class="alert-heading">Upload CSV or XLSL file.</h4>
                              <p>Delivery quantity of 0.0 will be ignored for this sale order line, but contact will be imported. Use it when you want to create a parent company with multiple shipping addresses.</p>
                              <hr/>
                              <!--<p class="mb-0">Whenever you need to, be sure to use margin utilities to keep things nice and tidy.</p>-->
                                <p class="mb-0"><strong>name,street,street2,city,state,zip,country,phone,email,parent company,delivery quantity</strong></p>
                                <p class="mb-0">"Company Name","Street Name",,"SF","CA","999999","US","892742450","companyemail@exampleemail.com",,0.0</p>
                                <p class="mb-0">"Company Shipping Contact A","Street A",,"SF","CA","12345","US","1234567890","companyshippingemaila@exampleemail.com","Company Name",20.0</p>
                                <p class="mb-0">"Company Shipping Contact B","Street B",,"SF","CA","54321","US","0987654321","companyshippingemailb@exampleemail.com","Company Name",30.0</p>
                            </div>
                            <!--<p class="text-info"><strong>Upload CSV or XLSL file here. Delivery quantity of 0.0 will be ignored for this sale order line, but contact will be imported.</strong></p>-->
                            <!--<p><strong>name,street,street2,city,state,zip,country,phone,email,parent company,delivery quantity</strong></p>-->
                            <!--<p>"Company Name","Street Name",,"SF","CA","999999","US","892742450","companyemail@exampleemail.com",,0.0</p>-->
                            <!--<p>"Company Shipping Contact A","Street A",,"SF","CA","12345","US","1234567890","companyshippingemaila@exampleemail.com","Company Name",20.0</p>-->
                            <!--<p>"Company Shipping Contact B","Street B",,"SF","CA","54321","US","0987654321","companyshippingemailb@exampleemail.com","Company Name",30.0</p>-->
                         </div>

                        <group>
                            <field name="file" widget="file"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Upload" type="object" name="action_import_deliveries" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
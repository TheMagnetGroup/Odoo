<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="wizard_picking_delivery_package">
            <field name="name">Picking Delivery Package Wizard</field>
            <field name="model">picking.delivery.package.wizard</field>
            <field name="priority">16</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Delivery Packages" create="true">
                  <sheet>
		    <group>
		      <field name="picking_id" invisible="1"/>
			<field name="package_carrier_type" invisible="1"/>
		    </group>
                      <group>
			<field name="delivery_package_ids" mode="tree" nolabel="1">
			    <tree editable="bottom">
			      <field name="shipping_weight"/>
			      <field name="packaging_id" domain="[('package_carrier_type', '=', parent.package_carrier_type)]"/>
			      <field name="num_packages"/>
			    </tree>
			  </field>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Confirm" type="object" name="action_define_packages" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

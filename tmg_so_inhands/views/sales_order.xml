<odoo>
    <data>
        <record model="ir.ui.view" id="tmg_order_form_inherits_in_hands">
            <field name="name">tmg.sales.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='expected_date']" position="after">
                    <field name="in_hands"></field>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="tmg_so_inhands_replace">
            <field name="name">tmg.so.inhands.replace</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='expected_date']" position="replace">
                    <field name="in_hands"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

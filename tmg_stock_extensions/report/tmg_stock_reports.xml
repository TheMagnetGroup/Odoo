<odoo>
    <data>
        <template id="tmg_stock_inventory" inherit_id="stock.report_inventory">
            <!-- Replace the stock check stub template with the TMG check stub template -->
            <xpath expr="/t[1]/t[1]/t[1]/t[1]/div[1]/table[2]/thead[1]/tr[1]/th[1]" position="after">
                <th><strong>Product</strong></th>
                <th><strong>Last Verified</strong></th>
            </xpath>
            <xpath expr="/t[1]/t[1]/t[1]/t[1]/div[1]/table[2]/tbody[1]/t[1]/tr[2]/td[2]" position="after">
                <td><span style="padding-right:20px" t-field="line.last_verified_uid"/><span t-field="line.last_verified_date"/></td>
            </xpath>
        </template>

    </data>
</odoo>
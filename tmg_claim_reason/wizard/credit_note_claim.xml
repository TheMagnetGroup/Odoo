<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


       <record id="tmg_account_invoice_refund_claim" model="ir.ui.view">
            <field name="name">account.claim.refund.inherit</field>
            <field name="model">account.invoice.refund</field>
            <field name="inherit_id" ref="account.view_account_invoice_refund" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="after">
                    <field name="claim_reason" options="{'limit':1, 'no_create_edit':'1'}" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='description']" position="replace">
                    <field name="description" attrs="{'invisible': True}"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>
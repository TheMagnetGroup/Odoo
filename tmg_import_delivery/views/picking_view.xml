<odoo>
    <record id="view_picking_withcarrier_out_form_inherit_delivery_fedex" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.delivery.fedex</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='delivery_type']" position="after">
                    <field name="fedex_bill_my_account" invisible="1"/>
                    <field name="ups_bill_my_account" invisible="1"/>
                    <field name="fedex_service_type" attrs="{'invisible': [('fedex_bill_my_account', '!=', True)], 'required':[('fedex_bill_my_account', '!=', False)]}"/>
                    <field name="fedex_carrier_account" attrs="{'invisible': [('fedex_bill_my_account', '!=', True)], 'required':[('fedex_bill_my_account', '!=', False)]}"/>
                    <field name="shipping_reference_1" invisible="1"/>
                    <field name="shipping_reference_2"/>
            </xpath>
            <xpath expr="//field[@name='ups_carrier_account']" position="replace">
                <field name="ups_carrier_account" attrs="{'invisible': [('ups_bill_my_account', '=', False)], 'required':[('ups_bill_my_account', '!=', False)]}"/>
            </xpath>

            <xpath expr="//field[@name='ups_service_type']" position="replace">
                <field name="ups_service_type" attrs="{'invisible': [('ups_bill_my_account', '=', False)], 'required':[('ups_bill_my_account', '!=', False)]}"/>
            </xpath>
        </field>
    </record>

    </odoo>




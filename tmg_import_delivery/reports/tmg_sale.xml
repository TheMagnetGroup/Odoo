<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="tmg_report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@t-field='doc.partner_shipping_id']" position="replace">
            <div t-field="doc.partner_shipping_id"
                 t-options='{"widget": "contact", "fields": ["address", "name", "phone", "attention_to"], "no_marker": True, "phone_icons": True}'/>
        </xpath>
    </template>

    <template id="tmg_import_delivery_contact" inherit_id="base.contact">
        <xpath expr="/t/address/t" position="after">
            <div t-if="object.attention_to and 'attention_to' in fields">
                <span>Attn: </span>
                <span t-esc="object.attention_to"/>
            </div>
        </xpath>
    </template>
</odoo>
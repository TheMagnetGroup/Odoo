<odoo>
    <data>

        <record id="tmg_project_task_view_kanban" model="ir.ui.view">
            <field name="name">tmg.project.task.kanban</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name"/> (#<field name="id"/>)
                </xpath>
            </field>
        </record>

        <record id="tmg_project_task_view_tree" model="ir.ui.view">
            <field name="name">tmg.project.task.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="display_name"/>
                </xpath>
            </field>
        </record>

        <record id="tmg_project_task_view_form" model="ir.ui.view">
            <field name="name">tmg.project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='project_id']" position="after">
                    <field name="id"/>
                </xpath>
            </field>
        </record>

        <record id="tmg_project_task_view_search" model="ir.ui.view">
            <field name="name">tmg.project.task.search</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <xpath expr="//search/field[@name='name']" position="after">
                    <field name="id"/>
                </xpath>
            </field>
        </record>

  </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="portal_quick_assign_wizard" model="ir.ui.view">
            <field name="name">portal_quick_assign_wizard</field>
            <field name="model">portal.quick.assign</field>
            <field name="arch" type="xml">
                <form string="Assign">
                    <!--<p class="alert alert-warning"><field name="access_warning"/></p> -->
                    <group>
                        <field name="user_id" placeholder="Assign IT Tech to ticket(s)..."/>
                    </group>
                    <footer>
                        <button string="Assign" name="action_assign_tech"  type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="portal_quick_assign_action"
                     multi="True" 
                     key2="client_action_multi" 
                     name="Quick Assign Tech" 
                     res_model="portal.quick.assign"
                     src_model="helpdesk.ticket"
                view_mode="form" target="new" view_type="form" view_id="portal_quick_assign_wizard" />
           
        
    </data>
</odoo>
